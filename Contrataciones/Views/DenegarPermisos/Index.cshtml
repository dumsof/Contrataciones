@model IEnumerable<Contrataciones.Models.DenegarPermisos>

@{
    ViewBag.Title = "Denegar Permisos Rol";
}

<h2>Denegar Permisos Rol</h2>

<input type="hidden" id="RolID" value="@ViewContext.RouteData.Values["id"]" />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="tbDenegarPermiso" class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.RolId)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.DescripcionMenu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ControladorAccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Permiso)
            
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style = "display:none" >      
            @item.RolId
          
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescripcionMenu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ControladorAccion)
        </td>
        <td>          
            <input type="checkbox" id="chkDenegarPermiso" checked="@item.Permiso" value="@item.RolId" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DenegarPermisoID }) |
            @Html.ActionLink("Details", "Details", new { id=item.DenegarPermisoID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DenegarPermisoID })
        </td>
    </tr>
}

</table>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/DenegarPermiso")
